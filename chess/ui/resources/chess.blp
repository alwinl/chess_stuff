Window dlgLevel {
  child: Box {
    orientation: vertical;
    margin-start: 5;
    margin-end: 5;
    margin-top: 5;
    margin-bottom: 5;

    Frame {
      Box {
        orientation: vertical;
        margin-start: 5;
        margin-end: 5;
        margin-top: 5;
        margin-bottom: 5;

        CheckButton chkLevelEasy {
          label: "Easy";
          active: true;
          css-classes: ["radiobutton"];
        }

        CheckButton chkLevelTimed {
          label: "Timed";
          group: chkLevelEasy;
          css-classes: ["radiobutton"];
        }

        Box {
          margin-start: 50;
          margin-end: 10;

          Label {
            label: "Seconds per move:";
          }

          Entry fldLevelTimed {}
        }

        CheckButton chkLevelTotalTime {
          label: "Total Time";
          group: chkLevelEasy;
          css-classes: ["radiobutton"];
        }

        Box {
          margin-start: 50;
          margin-end: 10;

          Label {
            label: "Minutes per game:";
          }

          Entry fldLevelTotalTime {}
        }

        CheckButton chkLevelInfinite {
          label: "Infinite";
          group: chkLevelEasy;
          css-classes: ["radiobutton"];
        }

        CheckButton chkLevelPlySearch {
          label: "Ply Search";
          group: chkLevelEasy;
          css-classes: ["radiobutton"];
        }

        CheckButton chkLevelMateSearch {
          label: "Mate Search";
          group: chkLevelEasy;
          css-classes: ["radiobutton"];
        }

        CheckButton chkLevelMatching {
          label: "Match Time";
          group: chkLevelEasy;
          css-classes: ["radiobutton"];
        }
      }
    }

    Frame {
      Box {
        margin-start: 5;
        margin-end: 5;
        margin-top: 5;
        margin-bottom: 5;

        Button btnLevelCancel {
          label: "Cancel";
        }

        Button btnLevelOK {
          label: "OK";
        }
      }
    }
  };

  modal: true;
  title: "Level";
  transient-for: main_view;
}

Adjustment adjQueen {
  page-increment: 10.0;
  step-increment: 1.0;
  upper: 255.0;
}

Adjustment adjRook {
  page-increment: 10.0;
  step-increment: 1.0;
  upper: 255.0;
}

Adjustment adjBishop {
  page-increment: 10.0;
  step-increment: 1.0;
  upper: 255.0;
}

Adjustment adjKnight {
  page-increment: 10.0;
  step-increment: 1.0;
  upper: 255.0;
}

Adjustment adjPawn {
  page-increment: 10.0;
  step-increment: 1.0;
  upper: 255.0;
}

